{
  "functions": [
    {
      "source": "api",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "ignore": [
      "firebase.json",
      "**/node_modules/**"
    ],
    "public": "client/public",
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "potenciarte-api",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "run": {
          "serviceId": "potenciarte-client",
          "region": "us-central1"
        }
      }
    ]
  }
}
